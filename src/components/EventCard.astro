---

const {data} = Astro.props;

---

<article>
    <img src=`/img/${data.img}` alt={data.place}>
    <header>
        <h3>{data.place}</h3>
        <p>{data.date}</p>
        <p class="hover_info">{data.hover}</p>
    </header>
</article>

<style>
    body {
        background-color: #fcfcfc;
    }
    
    article {
       position: relative;
       display: inline-block;
       overflow: hidden;
    }

    img {
        width: 100%;
        display: block;
    }

    header {
        display: flex;
        justify-content: space-between;
    }


    article:hover .hover_info {
    display: flex; 
}
    
    @media (min-width: 800px) {
    h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 20px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 15px;
    }

    .hover_info {
    display: none; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ECEDEF;
    color: black;
    align-items: center;
    padding: 5px;
    border-radius: 5px;
    position: absolute;
    font-size: 12px;
    justify-content: center;
    text-align: center;
    z-index: 1;
    pointer-events: none;
    }

    }

    @media (min-width: 501px) and (max-width: 799px) {
        h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 17px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 13px;
    } 


    .hover_info {
    display: none; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ECEDEF;
    color: black;
    align-items: center;
    padding: 5px;
    border-radius: 5px;
    position: absolute;
    font-size: 13px;
    justify-content: center;
    text-align: center;
    z-index: 1;
    pointer-events: none;
    }

    }

    @media (max-width: 500px) {
    h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 15px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 9px;
    } 

    .hover_info {
    display: none; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ECEDEF;
    color: black;
    align-items: center;
    padding: 5px;
    border-radius: 5px;
    position: absolute;
    font-size: 9px;
    justify-content: center;
    text-align: center;
    z-index: 1;
    pointer-events: none;
    }

    }
</style>
<script>

document.querySelectorAll("article").forEach((article) => {
    const hoverInfo = article.querySelector(".hover_info");

    article.addEventListener("mouseenter", async () => {
        const hoverData = await fetchHoverData(); 
        hoverInfo.textContent = hoverData;
    });
});


async function fetchHoverData() {
    const response = await fetch("/api/get-hover-data"); 
    const data = await response.json();
    return data.hover; 
}


</script>