---

const {data} = Astro.props;

---

<article>
    <img src=`/img/${data.img}` alt={data.place}>
    <header>
        <h3>{data.place}</h3>
        <p>{data.date}</p>
        <p class="hover_info">{data.hover}</p>
    </header>
</article>

<style>
    body {
        background-color: #fcfcfc;
    }
    
    article {
       
    }

    header {
        display: flex;
        justify-content: space-between;
    }

    .hover_info {
    display: none; 
    background-color: #333;
    color: #fff;
    padding: 5px;
    border-radius: 5px;
    position: absolute;
    z-index: 10;
    font-size: 12px;
    }

    article:hover .hover_info {
    display: block; 
}
    
    @media (min-width: 800px) {
    h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 20px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 15px;
    }
    }

    @media (min-width: 501px) and (max-width: 799px) {
        h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 17px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 13px;
    } 
    }

    @media (max-width: 500px) {
    h3 {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 15px;
    }
    
    p {
    font-family: "Roboto Mono", monospace;
    font-style: normal;
    font-size: 9px;
    } 
    }
</style>
<script>

document.querySelectorAll("article").forEach((article) => {
    const hoverInfo = article.querySelector(".hover_info");

    article.addEventListener("mouseenter", async () => {
        const hoverData = await fetchHoverData(); 
        hoverInfo.textContent = hoverData;
    });
});


async function fetchHoverData() {
    const response = await fetch("/api/get-hover-data"); 
    const data = await response.json();
    return data.hover; 
}


</script>