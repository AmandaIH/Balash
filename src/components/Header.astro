  <style>
  /* Header styling */
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2%;
    position: relative;
  }
  
  /* Logo styling */
  .logo {
    width: 10rem;
  }
  
  /* Burger menu styling */
  .burger-menu {
    display: none;
    flex-direction: column;
    gap: 0.3rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1100;
  }
  
  .burger-menu span {
    display: block;
    width: 2rem;
    height: 0.25rem;
    background-color: black;
    
    transition: transform 0.3s, opacity 0.3s;
  }
  
  .burger-menu.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
    display: none;
  }
  
  .burger-menu.open span:nth-child(2) {
    opacity: 0;
  }
  
  .burger-menu.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
    
  }
  

  /* Mindre logo styling */
.menu-logo {
  display: none; /* Skjult som standard */
  position: absolute;
  top: 0;
  left: 0; /* Placeret til venstre */
  z-index: 1100;
}

.menu-logo img {
  width: 7rem; /* Mindre størrelse */
}

/* Når burger-menuen er aktiv */
.burger-menu.open ~ .menu-logo {
  display: block; /* Gør logoet synligt */
}



  /* Navigation menu styling */
  .nav-items {
    display: flex;
    flex-direction: row;
    list-style: none;
    gap: 2.5rem;
  }
  
  .nav-items a {
    color: black;
    text-decoration: none;
    font-family: "Roboto Mono", monospace;
    font-size: 1.5rem;
  }
  
  .nav-items a:hover {
    text-decoration: underline;
  }
  
  /* Mobile styles */
  @media (max-width: 799px) {
    .burger-menu {
      display: flex;
    }
  
    .nav-items {
      display: none;
      flex-direction: column;
      list-style: none;
      gap: 5rem;
      position: fixed;
      top: 0;
      right: 0;
      height: 75%;
      width: 100%;
      background-color: white;
      justify-content: center;
      align-items: center;
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;
      z-index: 1000;
    }
  
   

    .nav-items.active {
      display: flex;
      transform: translateX(0);
    
    }
  
    #menu-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
      opacity: 0;
      transition: opacity 0.3s;
    }
  
    #menu-overlay.active {
      display: block;
      opacity: 5;
    }

   /* Vis menu-logo i mobilvisning */
   .menu-logo {
    display: block;
  }

  }
  
/* Mindre logo styling */
.menu-logo {
  display: none; /* Skjult som standard */
  position: absolute;
  top: 0;
  left: 0; /* Placeret til venstre */
  z-index: 1100;
}

.menu-logo img {
  width: 10rem; /* Mindre størrelse */
}

/* Når burger-menuen er aktiv */
header.open .menu-logo {
  display: block; /* Gør logoet synligt i mobilvisning */
}


/* Desktop styles (minimum width 800px) */
@media (min-width: 800px) {
    .menu-logo {
    display: none;
  }

/* Når burger-menuen er aktiv */
header.open .menu-logo {
  display: none; /* Gør logoet synligt i mobilvisning */
}
}
  </style>
  
  <script>
  // JavaScript for burger menu functionality
  document.addEventListener("DOMContentLoaded", () => {
    const burgerMenu = document.querySelector("#burger-menu");
    const navItems = document.querySelector(".nav-items");
    const overlay = document.querySelector("#menu-overlay");
  
    if (burgerMenu && navItems && overlay) {
      burgerMenu.addEventListener("click", () => {
        navItems.classList.toggle("active");
        overlay.classList.toggle("active");
        burgerMenu.classList.toggle("open");
      });
  
      overlay.addEventListener("click", () => {
        navItems.classList.remove("active");
        overlay.classList.remove("active");
        burgerMenu.classList.remove("open");
      });
    } else {
      console.warn("Menu elements not found in the DOM.");
    }
  });
  </script>