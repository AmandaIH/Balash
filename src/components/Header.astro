 <!-- Mindre logo -->
 <a href="index.astro" class="menu-logo">
    <img src="/public/logo/logo_sort.svg" alt="Mindre Logo">
  </a>

    <!-- Overlay -->
    <div id="menu-overlay"></div>
  
