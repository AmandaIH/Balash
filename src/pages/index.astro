---
import Mainlayout from '../layouts/Mainlayout.astro';
import Header from "../components/Header.astro";
import "../css/global.css";
import Footer from '../components/Footer.astro';



import Newsletterbox from '../components/Newsletterbox.astro';
---

<Mainlayout>
<Header></Header>
<div class="container">
<video src="">VIDEO</video>
<img class="drinks" src="/public/img_mobile/forside_drinks_mobile.webp" alt="Drinks">
<img class="soho" src="/public/img_mobile/forside_soho_mobile.webp" alt="PÃ¥ Soho">
<img class="suppe" src="/public/img_mobile/forside_suppe_mobile.webp" alt="En suppe">
<img class="fisk" src="/public/img/forside_fish.webp" alt="Fisk">
</div>
<Newsletterbox></Newsletterbox>
<Footer></Footer>
</Mainlayout>

<style>



@media (max-width: 500px) {
img {
	max-width: 100%;
	margin-top: 0%;
	margin-bottom: 5%;
}
	body {
	margin: 13%;
}
}

@media (min-width: 501px) and (max-width: 799px){
.container {
display: flex;
justify-content: center;
align-items: center;
flex-wrap: wrap;

}

.container img {
	width: 100%;
	max-width: 799px;
	height: auto;
	object-fit: cover;
	margin-bottom: 5%;
}

body {
	margin: 13%;
}

}

@media (min-width: 800px) {
	
	body {
	margin: 3%;
}
	.container img {
        width: 100%; 
		height: 100%;
        object-fit: cover; 
    }
	.container {
	display: grid;
	grid-template-columns: 1fr 1fr;
	grid-template-rows: 1fr 1fr 1fr;
	width: 100%;
	gap: 2%;
}
.drinks {
	grid-column: 2 / 3;
	grid-row: 1;
	object-fit: cover;
}
.soho {
	grid-column: 1 / 3;
	grid-row: 2;
	object-fit: cover;
}
.suppe {
	grid-column: 1 / 2;
	grid-row: 3;
	object-fit: cover;
}

.fisk {
	grid-column: 2 / 3;
	grid-row: 3;
	object-fit: cover;
}
}

</style>