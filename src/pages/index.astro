</div>
<style>
.first-feature-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff; 
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999; 
}

.first-feature-overlay.hidden {
  display: none;
}

@media (max-width: 500px) {
img {
	max-width: 100%;
	margin-top: 0%;
	margin-bottom: 5%;
}
	.container {
	margin: 13%;
}
}

@media (min-width: 501px) and (max-width: 799px){
.container {
display: flex;
justify-content: center;
align-items: center;
flex-wrap: wrap;

}

.container img {
	width: 100%;
	max-width: 799px;
	height: auto;
	object-fit: cover;
	margin-bottom: 5%;
}

.container {
	margin: 13%;
	max-width: 799px;
}

}

@media (min-width: 800px) {
	
	.container {
	margin: 13%;
	max-width: 1410px;
}
	.container img {
        width: 100%; 
		height: 100%;
        object-fit: cover; 
    }
	.container {
	display: grid;
	grid-template-columns: 1fr 1fr;
	grid-template-rows: 1fr 1fr 1fr;
	gap: 2%;
}
.drinks {
	grid-column: 2 / 3;
	grid-row: 1;
	object-fit: cover;
}
.soho {
	grid-column: 1 / 3;
	grid-row: 2;
	object-fit: cover;
}
.suppe {
	grid-column: 1 / 2;
	grid-row: 3;
	object-fit: cover;
}

.fisk {
	grid-column: 2 / 3;
	grid-row: 3;
	object-fit: cover;
}
}

</style>